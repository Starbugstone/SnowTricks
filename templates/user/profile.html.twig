{% extends 'base.html.twig' %}

{% block title %}Profile {{ user.userName }}{% endblock %}

{% block body %}
    <div class="row">

        <div class="row profile-title mt-3">
            <div class="col s12 m4 profile-image">
                {% include 'user/_user-profile-image.html.twig' with {'user': user} %}
            </div>
            <div class="col s12 m8">
                <h1 class="center font-coiny bordered-text">
                    {{ user.email }}
                </h1>
            </div>

        </div>

    </div>

    <div class="row">
        <div class="col m4 offset-m1">
            <h2 class="center font-coiny bordered-text">Update profile</h2>
            {{ form_start(form) }}

            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>

        <div class="col m4 offset-m1">
            <h2 class="center font-coiny bordered-text">Change password</h2>
            {{ form_start(formPassword) }}

            {{ form_widget(formPassword) }}
            {{ form_end(formPassword) }}
        </div>
    </div>
    <div class="row">
        <div class="col s8 offset-s2">
            <form action="{{ path('admin.delete_profile') }}" method="post"
                  onsubmit="return confirm('are you sure you wish to delete your user account ?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete-profile'~user.id) }}"/>
                <button class="btn red lighten-2 right">Delete Account</button>
            </form>
        </div>

    </div>
{% endblock %}