{% if tricks|length > 0 %}
{% for trick in tricks %}
<div class="col l3 m6 s12 xl5ths">
    <div class="card trick-card">
        <div class="card-image">
            <a href="{{ path('trick.show', {id:trick.id, slug:trick.slug}) }}">
                {% include 'media/_trick-primary-image-card.html.twig' with {'trick': trick} %}
            </a>


        </div>
        <div class="card-content">
            <div class="row">
                <div class="col s12 valign-wrapper">
                    <h2 class="font-coiny small-title m-0"><a href="{{ path('trick.show', {id:trick.id, slug:trick.slug}) }}" class="grey-text">{{ trick.name }}</a></h2>
                </div>
                {% if is_granted('ROLE_USER') %}
                    <div class="trick-card-icons">
                        {% include 'trick/_trick-edit-icons.html.twig' with {'trick': trick} %}
                    </div>
                {% endif %}
            </div>

        </div>
    </div>
</div>
{% endfor %}
{% else %}
    <p>Sorry, no tricks here, go and create some</p>
{% endif %}