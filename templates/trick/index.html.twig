{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}
    <!-- Header image with slogan -->
    <div class="valign-wrapper vh100" id="st-header-image" style="background-image: url(https://images.pexels.com/photos/531880/pexels-photo-531880.jpeg)">

        <h1 class="header-text-title center-align w100">Phrase Accroche</h1>

    </div>

    <!-- The tricks cards -->
    <div class="row mx-xl-5 mt-xl-5 mt-l-3 mt-s-1">
        {% for i in 0..10 %}
            <div class="col xl2 l3 m6 s12 xl5ths">
                <div class="card">
                    <div class="card-image">
                        <img src="https://via.placeholder.com/150x100">

                    </div>
                    <div class="card-content">
                        <p>
                            Trick Name
                            <span class="right">
                            <a class="waves-effect waves-light"><i class="material-icons">create</i></a>
                            <a class="waves-effect waves-light"><i class="material-icons">delete</i></a>
                        </span>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# TODO: Load More #}

{% endblock %}
