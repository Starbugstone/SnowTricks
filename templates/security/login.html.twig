{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="row mx-3 mx-m-0" id="trickLoginContainer">
        <div class="col s12 m6 l4 offset-m3 offset-l4 px-m-4 px-s-1 pb-2 mt-3 mt-m-5 z-depth-2">
            <form method="post">
                <div class="row center">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h1 class="mb-1">Login</h1>

                    <div class="input-field col s12">
                        <label for="inputEmail">Email</label>
                        <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="validate"
                               required autofocus>
                    </div>

                    <div class="input-field col s12">
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="validate" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="col s12">
                        <label for="remember_me">
                            <input type="checkbox" name="_remember_me" id="remember_me" class="filled-in"/>
                            <span>Remember me</span>
                        </label>
                    </div>

                    <div class="col s12 hide-on-small-only">
                        <p id="forgotPasswordLarge"><a href="{{ path('app_forgotpassword') }}">Forgot Password ?</a></p>
                    </div>

                    <div class="mt-2 mt-m-0 col s12">
                        <button class="btn btn-lg btn-primary" type="submit">
                            Sign in
                        </button>
                    </div>

                    <div class="hide-on-med-and-up col s12">
                        <p><a href="{{ path('app_register') }}">Register</a></p>
                        <p id="forgotPasswordSmall"><a href="{{ path('app_forgotpassword') }}">Forgot Password ?</a></p>
                    </div>
                </div>
            </form>

        </div>
    </div>


{% endblock %}
